{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make QMK",
            "type": "shell",
            "command": "C:\\msys64\\usr\\bin\\make.exe",
            // use options.cwd property if the Makefile is not in the project root ${workspaceRoot} dir
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "PATH": "C:\\msys64\\usr\\bin;C:\\msys64\\home\\13676\\qmk_utils\\gcc-arm-none-eabi\\bin"
                }

            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "args": ["F3Discovery68:default"],
            // Use the standard less compilation problem matcher.
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
